<!-- Heading title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message display -->
<%- messages() %>

<!-- Error display -->
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<% }) %>
    </ul>
<% } %>

<!-- Favorites content -->
<div class="favorites-container">
    <%- favoritesList %>
</div>